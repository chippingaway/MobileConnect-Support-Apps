<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chinmay.forcemobiledata.MainActivity">




    <Button
        android:id="@+id/normal_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:minWidth="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mconnect" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/normal_button"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true" >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91"
            android:layout_marginRight="20dp"
            />
        <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            />

    </LinearLayout>

    <Button
        android:id="@+id/force_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/normal_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Force Mobile Data" />


</RelativeLayout>
